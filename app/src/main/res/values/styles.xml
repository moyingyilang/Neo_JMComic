<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 应用主题 -->
    <style name="AppTheme" parent="Theme.ComicApp">
        <!-- 可以在这里覆盖特定属性 -->
    </style>
    
    <!-- 对话框样式 -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/secondary</item>
    </style>
    
    <!-- 底部导航样式 -->
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
        <item name="itemTextColor">@color/bottom_nav_text_tint</item>
    </style>
</resources>